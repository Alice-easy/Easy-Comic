<?xml version="1.0" encoding="UTF-8"?>
<!-- Android Lint 配置文件 - Easy Comic 项目代码质量检查 -->
<lint>
    <!-- 严重问题：必须修复 -->
    <issue id="HardcodedText" severity="error" />
    <issue id="MissingTranslation" severity="error" />
    <issue id="UnusedResources" severity="error" />
    <issue id="IconMissingDensityFolder" severity="error" />
    <issue id="SecurityException" severity="error" />
    <issue id="SQLiteString" severity="error" />
    
    <!-- 性能相关：高优先级 -->
    <issue id="UselessParent" severity="warning" />
    <issue id="TooManyViews" severity="warning" />
    <issue id="TooDeepLayout" severity="warning" />
    <issue id="UnusedAttribute" severity="warning" />
    <issue id="Overdraw" severity="warning" />
    <issue id="ViewHolder" severity="warning" />
    <issue id="Recycle" severity="warning" />
    <issue id="WakelockTimeout" severity="warning" />
    
    <!-- 安全相关：高优先级 -->
    <issue id="HardcodedDebugMode" severity="error" />
    <issue id="SetJavaScriptEnabled" severity="warning" />
    <issue id="ExportedReceiver" severity="warning" />
    <issue id="ExportedService" severity="warning" />
    <issue id="GrantAllUris" severity="error" />
    <issue id="WorldReadableFiles" severity="error" />
    <issue id="WorldWriteableFiles" severity="error" />
    
    <!-- Compose 相关检查 -->
    <issue id="ComposeViewModelInjection" severity="warning" />
    <issue id="ComposeUnstableReceiver" severity="warning" />
    <issue id="ComposeParameterOrder" severity="warning" />
    <issue id="ComposeNaming" severity="warning" />
    
    <!-- 可访问性 -->
    <issue id="ContentDescription" severity="warning" />
    <issue id="ClickableViewAccessibility" severity="warning" />
    <issue id="KeyboardInaccessibleWidget" severity="warning" />
    
    <!-- 代码质量 -->
    <issue id="DefaultLocale" severity="warning" />
    <issue id="SimpleDateFormat" severity="warning" />
    <issue id="UnusedIds" severity="informational" />
    <issue id="IconDuplicates" severity="informational" />
    <issue id="TypographyDashes" severity="informational" />
    <issue id="TypographyQuotes" severity="informational" />
    
    <!-- 忽略的检查项 -->
    <issue id="GoogleAppIndexingWarning" severity="ignore" />
    <issue id="MissingApplicationIcon" severity="ignore" />
    <issue id="AllowBackup" severity="ignore" />
    <issue id="RtlEnabled" severity="ignore" />
    <issue id="RtlHardcoded" severity="ignore" />
    
    <!-- 测试相关忽略 -->
    <issue id="Assert" severity="ignore">
        <ignore path="**/test/**" />
        <ignore path="**/androidTest/**" />
    </issue>
    
    <!-- 特定文件忽略 -->
    <issue id="UnusedResources">
        <ignore path="**/values/colors.xml" />
        <ignore path="**/values/themes.xml" />
    </issue>
    
    <!-- 第三方库忽略 -->
    <issue id="GradleDependency">
        <ignore path="**/libs.versions.toml" />
    </issue>
</lint>